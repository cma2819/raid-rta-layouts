{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "googleApiKey": {
            "type": "string",
            "default": "Google API key for interacting with spreadsheet."
        },
        "twitch": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "key": {
                    "type": "string",
                    "default": "Twitch API key"
                },
                "secret": {
                    "type": "string",
                    "default": "Twitch API secret"
                }
            }
        }
    },
    "required": [
        "googleApiKey",
        "twitch"
    ]
}